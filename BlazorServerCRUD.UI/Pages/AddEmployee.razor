@page "/AddEmployee"
@inherits AddEmployeeBase

<h2>Add Employee</h2>

<hr />

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="EmployeeName" class="control-label">Name</label>
                <input form="EmployeeName" class="form-control" @bind="@NewEmployee.EmployeeName" />
            </div>

            <div class="form-group">
                <label for="StartDate" class="control-label">Start Date</label>
                <input form="StartDate" class="form-control" @bind="@NewEmployee.StartDate" />
            </div>

            <div class="form-group">
                <label for="PhotoFileName" class="control-label">Photo</label>
                <input form="PhotoFileName" class="form-control" @bind="@NewEmployee.PhotoFileName" />
            </div>

            <div class="form-group">
                <label for="Department" class="control-label">Department</label>
                <input form="Department" class="form-control" @bind="@NewEmployee.DepartmentId" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateEmployee" value="Save" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

